@model Product
<div class="card shadow border-primary nt-4">
    <div class="card-header bg-primary bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-group">
          <!--          <div class="form-floating mb-3">
                        <input asp-for="Id" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="Id" class="ms-2"></label>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div> -->
                    <div class="form-floating">
                        <input asp-for="Title" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="Title" class="ms-2"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Description" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="Description" class="ms-2"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Developer" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="Developer" class="ms-2"></label>
                        <span asp-validation-for="Developer" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="Price" class="ms-2"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="GameTags" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="GameTags" class="ms-2"></label>
                        <span asp-validation-for="GameTags" class="text-danger"></span>
                    </div>
                    <legend>Game Tags</legend>
                    <div class="form-floating">
                        <div class="form-check ">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Default checkbox
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked="">
                            <label class="form-check-label" for="flexCheckChecked">
                                Checked checkbox
                            </label>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Platform" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="Platform" class="ms-2"></label>
                        <span asp-validation-for="Platform" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="SupportedLanguage" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="SupportedLanguage" class="ms-2"></label>
                        <span asp-validation-for="SupportedLanguage" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Date" class="form-control shadow" placeholder="New Product" />
                        <label asp-for="Date" class="ms-2"></label>
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control border">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control border">
                            Back to list
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}