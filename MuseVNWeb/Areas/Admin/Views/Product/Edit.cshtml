@model Product
<div class="card shadow border-0 nt-4">
    <div class="card-header bg-primary bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div asp-validation-summary="All"></div> <!-- another option for asp-v-s ModelView-->
        <div class="mb-3 row p-1">
            <label asp-for="Id" class="p-1"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-1"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-1"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Developer" class="p-1"></label>
            <input asp-for="Developer" class="form-control" />
            <span asp-validation-for="Developer" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-1"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="GameTags" class="p-1"></label>
            <input asp-for="GameTags" class="form-control" />
            <span asp-validation-for="GameTags" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Platform" class="p-1"></label>
            <input asp-for="Platform" class="form-control" />
            <span asp-validation-for="Platform" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SupportedLanguage" class="p-1"></label>
            <input asp-for="SupportedLanguage" class="form-control" />
            <span asp-validation-for="SupportedLanguage" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Date" class="p-1"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>



        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control border">Update Product</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control border">
                    Back to list
                </a>
            </div>
        </div>


    </div>
</form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}