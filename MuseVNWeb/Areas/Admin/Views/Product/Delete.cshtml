@model Product
<div class="card shadow border-primary nt-4">
    <div class="card-header bg-primary bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div asp-validation-summary="All"></div> <!-- another option for asp-v-s ModelView-->
                <div class="mb-3 row p-1">
                    <label asp-for="Id" class="p-1"></label>
                    <input asp-for="Id" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Title" class="p-1"></label>
                    <input asp-for="Title" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Developer" class="p-1"></label>
                    <input asp-for="Developer" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Description" class="p-1"></label>
                    <input asp-for="Description" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Price"p-1"></label>
                    <input asp-for="Price" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="GameTags" class="p-1"></label>
                    <input asp-for="GameTags" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Platform" class="p-1"></label>
                    <input asp-for="Platform" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="SupportedLanguage" class="p-1"></label>
                    <input asp-for="SupportedLanguage" disabled class="form-control" />

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Date" class="p-1"></label>
                    <input asp-for="Date" disabled class="form-control" />

                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control border">Delete Product</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control border">
                            Back to list
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


