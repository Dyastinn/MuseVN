@model List<Platform>

<div class="card shadow border-primary nt-4">
    <div class="card-header bg-primary bg-gradient">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Platform List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="row">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <h2 class="text-primary">
                    <a asp-controller="Platform" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Platform
                    </a>
                </h2>
            </div>
        </div>



        <table class="table table-striped">
            <thead class="thead">
                <tr>
                    <th scope="col">Platform</th>
                    <th scope="col">Display Order</th>
                    <th scope="col"> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td scope="row">@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Platform" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Platform" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger border mx-2">
                                    <i class="bi bi-file-earmark-x"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>


