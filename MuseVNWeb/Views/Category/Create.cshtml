@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-1">Category Name</label>
            <input type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-1">Display Order</label>
            <input type="text" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control border">Create new category</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control border" >
                    Back to list
                </a>
            </div>
        </div>
       
        
    </div>
</form>